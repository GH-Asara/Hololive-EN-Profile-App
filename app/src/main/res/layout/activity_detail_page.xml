<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPage">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/holo4">

            <ImageView
                android:id="@+id/imgProfilePicture"
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:contentDescription="@string/hololive_profile_picture"
                android:paddingHorizontal="10sp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:orientation="vertical"
                android:layout_toEndOf="@id/imgProfilePicture">
                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:text="@string/name"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="10sp"/>
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp">
                    <TextView
                        android:id="@+id/txtDescription"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_regular"
                        android:text="@string/description"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </ScrollView>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="10sp"
            android:paddingHorizontal="2.5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="2.5sp"
                android:background="@drawable/outline_back">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:orientation="vertical"
                    android:background="@color/holo4"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:paddingHorizontal="5sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginHorizontal="2.5sp"
                        android:text="@string/basic_details"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txtBasicDetail"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:layout_gravity="center"
                    android:padding="2sp"
                    android:gravity="center"
                    android:layout_marginHorizontal="2.5sp"
                    android:text="@string/basicdetail"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="2.5sp"
                android:background="@drawable/outline_back">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:orientation="vertical"
                    android:background="@color/holo4"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_regular"
                        android:gravity="center"
                        android:paddingHorizontal="5sp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="2.5sp"
                        android:text="@string/personal_details"
                        android:textSize="14sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txtPersonalDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_regular"
                    android:gravity="center"
                    android:padding="2sp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="2.5sp"
                    android:text="@string/personal_detail"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/holo5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="25sp"
        android:layout_marginTop="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:orientation="vertical"
            android:background="@color/holo4"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_regular"
                android:gravity="center"
                android:padding="2sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginHorizontal="2.5sp"
                android:text="@string/medias"
                android:textSize="13sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtMediaDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/media"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/worksans_regular"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>